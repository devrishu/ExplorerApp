<mvc:View 
 controllerName="expapp.ui.Explorer.controller.App"
   xmlns="sap.m"  
   xmlns:mvc="sap.ui.core.mvc">
		<HBox>
			<Tree minWidth= "200px"
		    id="Tree"
		    items="{path: '/'}">
			<!-- <StandardTreeItem title="{name}" press = "handleTreeItemPress" detailPress = "handleTreeItemPress"  /> -->
			<CustomTreeItem>
				<Text text="{name}" visible ="{isDirectory}" />
				<Link text = "{name}" press = "handleTreeItemPress" visible ="{= !${isDirectory} }"/>
			</CustomTreeItem>
			</Tree> 
			<IconTabBar
					id="idIconTabBar"
					enableTabReordering="true"
					minWidth = "400px"
					class="sapUiResponsiveContentPadding">
			</IconTabBar>
			
		</HBox> 
</mvc:View>