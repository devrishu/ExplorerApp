<mvc:View 
 controllerName="expapp.ui.Explorer.controller.App"
   xmlns="sap.m"  
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:ce="sap.ui.codeeditor">
			<HBox>		
			<Tree 
		    id="treeControl"
		    items="{/content}">
			<!-- <StandardTreeItem title="{name}" press = "handleTreeItemPress" detailPress = "handleTreeItemPress"  /> -->
			<CustomTreeItem>
				<Text text="{name}" visible ="{isDirectory}" />
				<Link text = "{name}" press = "handleTreeItemPress" visible ="{= !${isDirectory} }"/>
			</CustomTreeItem>
			</Tree> 

			<VBox width="70%">
			<TabContainer class="sapUiResponsiveContentPadding sapUiResponsivePadding--header"
					id="idTabContainer"
					itemClose="itemCloseHandler">

				<items>
					<TabContainerItem  key="info"  name= "Welcome page">
					<content>						
							<ce:CodeEditor
								type="json"
								value='\{
								"Chinese" : "你好世界",
								"Dutch" : "Hallo wereld",
								"English" : "Hello world",
								"French" : "Bonjour monde",
								"German" : "Hallo Welt",
								"Greek" : "γειά σου κόσμος",
								"Italian" : "Ciao mondo",
								"Japanese" : "こんにちは世界",
								"Korean" : "여보세요 세계",
								"Portuguese" : "Olá mundo",
								"Russian" : "Здравствуй мир",
								"Spanish" : "Hola mundo"
								}'
								height="600px" width = "500px" />
								</content>
					</TabContainerItem>		
				</items>
			</TabContainer>			
			</VBox>
		</HBox>
</mvc:View>